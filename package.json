{
  "type": "module",
  "dependencies": {
    "simplex-noise": "^4.0.3",
    "three": "^0.167.1",
    "express": "^4.17.1",
    "cors": "^2.8.5",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "vite": "^5.4.2",
    "serve": "^14.2.1",
    "concurrently": "^9.1.0",
    "nodemon": "^3.0.3"
  },
  "scripts": {
    "dev:client": "vite --host 127.0.0.1",
    "dev:server": "nodemon --ignore 'data/*' src/server/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "vite build",
    "preview": "vite preview --host 127.0.0.1 --port 8080",
    "start:client": "serve -s dist -l 8080",
    "start:server": "node src/server/index.js",
    "start": "npm run build && concurrently \"npm run start:client\" \"npm run start:server\""
  }
}
